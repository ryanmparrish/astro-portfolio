---
import Icon from './Icon.astro';
import Pet from '../function-components/Pet.tsx';

const currentYear = new Date().getFullYear();
---

<Pet client:load />
<footer>
	<div class="group">
		<p>
			Developed with <Icon icon="coffee" size="1.2em" /> on the traditional lands of the Ute, Goshute, and Shoshone and Paiute peoples.
		</p>
		<p>&copy; {currentYear} Ryan Parrish</p>
	</div>
	<p class="socials">
		<a href="https://www.instagram.com/parrish_801/"> Instagram</a>
		<a href="https://github.com/ryanmparrish"> GitHub</a>
		<a href="https://codepen.io/toastEater"> CodePen</a>
	</p>
</footer>
<style>
	footer {
		display: flex;
		flex-direction: column;
		gap: 3rem;
		margin-top: 5rem;
		padding: 3rem 2rem 3rem;
		text-align: center;
		color: var(--gray-400);
		font-size: var(--text-sm);
		position: relative;
	}

	footer a {
		color: var(--gray-400);
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	footer a:hover,
	footer a:focus {
		text-decoration-color: currentColor;
	}

	.group {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		align-items: center;
	}

	.socials {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
		z-index: 2;
	}

	@media (min-width: 50em) {
		footer {
			flex-direction: row;
			justify-content: space-between;
			padding: 2.5rem 5rem;
		}

		.group {
			flex-direction: row;
			gap: 1rem;
			flex-wrap: wrap;
		}

		.socials {
			justify-content: flex-end;
		}
	}
</style>
