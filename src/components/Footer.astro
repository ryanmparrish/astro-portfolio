---
import Icon from './Icon.astro';
import Pet from '../function-components/Pet.tsx';
import { iconPaths } from './IconPaths';

const currentYear = new Date().getFullYear();
const iconLinks: { label: string; href: string; icon: keyof typeof iconPaths }[] = [
	{ label: 'Instagram', href: 'https://www.linkedin.com/in/ryan-parrish-6629842a/', icon: 'linkedin-logo' },
	{ label: 'GitHub', href: 'https://github.com/ryanmparrish', icon: 'github-logo' },
	{ label: 'CodePen', href: 'https://codepen.io/toastEater', icon: 'codepen-logo' },
	{ label: 'Instagram', href: 'https://www.instagram.com/parrish_801/', icon: 'instagram-logo' },
];

---

<Pet client:load />
<footer>
	<div class="group">
		<p>
			Developed with <Icon icon="coffee" size="1.2em" />
		</p>
		<p>&copy; {currentYear} Ryan Parrish</p>
	</div>
	<p class="socials">
		{
      iconLinks.map(({ href, icon, label }) => (
        <a href={href} class="social" target="_blank">
          <span class="sr-only">{label}</span>
          <Icon icon={icon} />
        </a>
      ))
    }
	</p>
</footer>
<style>
	footer {
		display: flex;
		flex-direction: column;
		gap: 3rem;
		margin-top: 5rem;
		padding: 3rem 2rem 3rem;
		text-align: center;
		color: var(--gray-400);
		font-size: var(--text-sm);
		position: relative;
	}

	footer a {
		color: var(--gray-400);
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	footer a:hover,
	footer a:focus {
		text-decoration-color: currentColor;
	}

	.group {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		align-items: center;
	}

	.socials {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
		z-index: 2;
	}

	@media (min-width: 50em) {
		footer {
			flex-direction: row;
			justify-content: space-between;
			padding: 2.5rem 5rem;
		}

		.group {
			flex-direction: row;
			gap: 1rem;
			flex-wrap: wrap;
		}

		.socials {
			justify-content: flex-end;
		}
	}
</style>
