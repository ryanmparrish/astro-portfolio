<style>
  :root {
    --bg-image-main: url('/assets/about/bg-main-light-800w.jpg');
  }

  :root.theme-dark {
    --bg-image-main: url('/assets/about/bg-main-dark-800w.jpg');
  }


  @media (min-width: 50em) {
    :root {
      --bg-image-main: url('/assets/about/bg-main-light-1440w.jpg');
    }
    :root.theme-dark {
      --bg-image-main: url('/assets/about/bg-main-dark-1440w.jpg');
    }
  }
</style>

<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	.slider-carousel img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}
  
  section em {
    font-size: var(--text-sm);
    color: var(--gray-300);
  }

	.content {
		grid-column: 2 / 4;
	}

  .skills p {
    color: var(--gray-400);
    margin-bottom: 2rem;
  }

  .case {
    margin: 1rem 0;
    padding: 0 .5rem;
    display: inline-flex;
    align-items: center;
    gap: .5rem;
    background: white;
    color: var(--gray-900)
  }

  .case .icon {
    width: 36px;
  }

	.content blockquote {
		margin: 20px 0;
		padding-left: 20px;
		border-left: 2px var(--link-color) solid;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}
  
  .content label,
  .content .title {
    font-size: var(--text-md);
    color: var(--gray-0);
    font-weight: 600;

  }

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}
</style>
